{
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://api.wilsonmuita.com/sitemap.xml"
    },
    {
      "source": "/image-sitemap.xml",
      "destination": "https://api.wilsonmuita.com/image-sitemap.xml"
    },
    {
      "source": "/sitemap-posts.xml", 
      "destination": "https://api.wilsonmuita.com/sitemap-posts.xml"
    },
    {
      "source": "/sitemap-index.xml",
      "destination": "https://api.wilsonmuita.com/sitemap-index.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "https://api.wilsonmuita.com/robots.txt"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "headers": {
    "/sitemap.xml": {
      "Content-Type": "application/xml"
    },
    "/image-sitemap.xml": {
      "Content-Type": "application/xml"
    },
    "/sitemap-posts.xml": {
      "Content-Type": "application/xml"
    },
    "/sitemap-index.xml": {
      "Content-Type": "application/xml"
    },
    "/robots.txt": {
      "Content-Type": "text/plain"
    }
  }
}